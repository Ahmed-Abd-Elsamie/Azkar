<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.root.azkar.ZekrActivity"
    app:cardCornerRadius="4dp"
    android:orientation="vertical"
    android:layout_margin="7dp"
    android:id="@+id/cardZekr"
    android:background="@color/colorPrimaryDark"



    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/zekr_bg"


        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="أزكار الصباح"
            android:fontFamily="@font/cairolight"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:id="@+id/zekr_type"
            android:textColor="#000"

            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/scrool"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="أزكار الصباح"
                    android:fontFamily="@font/cairolight"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:id="@+id/txt_zekr"
                    android:textColor="#000"
                    android:textSize="20dp"

                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="أزكار الصباح"
                    android:fontFamily="@font/cairolight"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:textSize="15dp"
                    android:id="@+id/txt_zekr_proof"
                    android:textColor="@color/colorPrimaryDark"

                    />




            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"

            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_count"
                android:text="100"
                android:layout_margin="10dp"
                android:id="@+id/btn_count"
                android:fontFamily="@font/cairolight"
                android:textColor="#fff"
                android:textSize="20dp"

                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>